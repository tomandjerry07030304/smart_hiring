# Smart Hiring System - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
APP_ENV=production
APP_NAME=SmartHiringSystem
APP_VERSION=1.0.0
SECRET_KEY=changeme_replace_with_secure_random_string_min_32_chars
PORT=8000

# Database Configuration
# For Cloud MongoDB (Recommended for production):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/smart_hiring_db?retryWrites=true&w=majority
# For Local MongoDB:
MONGODB_URI=mongodb://localhost:27017/smart_hiring_db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ML Models
MODEL_PATH=./ml_models/
ENABLE_ML_FEATURES=true

# Security
ADMIN_USER=admin
ADMIN_PASSWORD=changeme_use_strong_password
JWT_SECRET_KEY=changeme_different_from_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,doc,txt
UPLOAD_FOLDER=smart_hiring_resumes

# Features
ENABLE_AUTO_UPDATE=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FAIRNESS_AUDIT=true
ENABLE_RESUME_ANONYMIZATION=true

# Email Configuration (if ENABLE_EMAIL_NOTIFICATIONS=true)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@smarthiring.com

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Development/Debug (set to false in production)
DEBUG=false
FLASK_DEBUG=false
TESTING=false
