{
  "name": "smart-hiring-system",
  "productName": "Smart Hiring System",
  "version": "1.0.0",
  "description": "AI-Powered Fair Recruitment Platform",
  "main": "main.js",
  "author": {
    "name": "Smart Hiring System Team",
    "email": "support@smarthiring.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder build --win --publish never",
    "build:dir": "electron-builder build --win --dir",
    "dist": "electron-builder build --win --x64",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.smarthiring.app",
    "productName": "Smart Hiring System",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "assets/**/*",
      "app/**/*",
      "!node_modules/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../dist/backend",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "../.env.template",
        "to": ".env.template"
      },
      {
        "from": "../config",
        "to": "config",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Smart Hiring System",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "displayLanguageSelector": false,
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "license": "../LICENSE",
      "include": "installer.nsh"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-org",
        "repo": "smart-hiring-system"
      }
    ]
  }
}
